<div class="container">
  <p style="color: green"><%= notice %></p>
  
  <div id="<%= dom_id @product %>">
    <h2><%= @product.name %></h2>
    
    <%= link_to sanitize("&larr; Back to Products"), products_path %>

    <p>
      <strong>Price:</strong>
      $<%= @product.price %>
    </p>

    <p>
      <strong>Quantity:</strong>
      <%= @product.quantity %>
    </p>

  </div>


  <div>
    <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn--secondary" %>
    

    <%= button_to "Destroy this product", @product, method: :delete %>
  </div>
</div>